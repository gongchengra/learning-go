{{ template "header" . }}
        <nav class="navbar navbar-expand-lg navbar-expand-md navbar-expand-sm navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Homepage</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/contents">Contents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/account">My Account</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
        <h1>Contents</h1>
            <form action="/contents" method="post">
                <div class="form-group">
                    <label for="search">Search:</label>
                    <input type="text" class="form-control" id="search" name="search">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        <br />
        {{ if .error }}
            <p style="color:red">{{.error}}</p>
        {{ else }}
			{{ if .prevPage }}
                <a href="{{ .prevPage }}" class="btn btn-primary">Previous Page</a>
            {{ end }}
			{{ range .contents }}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Question from User:</h5>
                            <pre class="card-text" style="white-space: pre-wrap">{{.Prompt}}</pre>
                            <div>Answer from AI:<pre style="white-space: pre-wrap">{{.Answer}}</pre></div>
                            <div>Delete this question: <a href="/contentdel?id={{.ID}}">delete</a></div>
                        </div>
                    </div>
				<br/>
			{{ end }}
			{{ if .nextPage }}
                <a href="{{ .nextPage }}" class="btn btn-primary">Next Page</a>
            {{ end }}
        {{ end }}
        </div>
{{ template "footer" . }}
